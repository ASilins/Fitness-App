


<AuthorizeView Roles="Trainer,Admin">
    <Authorized>

        <label>This workout should be:</label>
        <InputRadioGroup TValue="bool">
            <InputRadio @bind="@_selectedValue" @onclick="@SelectedOption" Value=true>Public</InputRadio>
            <InputRadio @bind="@_selectedValue" @onclick="@SelectedOption" Value=false>Private</InputRadio>
        </InputRadioGroup>
        
    </Authorized>
</AuthorizeView>

@code {
    [Parameter]
    public bool _selectedValue { get; set; }
    [Parameter]
    public EventCallback<bool> _selectedValueChanged { get; set; }

    Task SelectedOption()
    {
        return _selectedValueChanged.InvokeAsync(_selectedValue);
    }
}